<section class="sprzety">
    <div class="tagi-section">
        <div class="tagi-top">
            <h3 class="item-tagi">TAGI</h3>
            <i class="fa fa-plus" data-action="dodajtag" data-tooltip="Kliknij aby dodać tag"></i>
        </div>
        {{#each system.tagi as |tag index|}}
            <div class="single-tag">
                <input type="text" class="tag-input" data-name="{{index}}" data-element = "tagi" value="{{lookup ../system.tagi index}}" placeholder="Wpisz nazwę Tagu">
                <i class="fa-regular fa-trash-can" data-action="usuntag" data-index="{{index}}"></i>
            </div>            
        {{/each}}
    </div>
    <div class="akcje">
        <label class="akcje-label">TYP AKCJI</label>
        <label class="akcje-label">ZASIEG</label>
        <select class="typ-akcji" data-name="akcja"  data-element = "akcja"> 
            <option value="0" {{#if (eq system.akcja 0)}}selected{{/if}}> -</option>
            <option value="1" {{#if (eq system.akcja 1)}}selected{{/if}}> CIĘCIE</option>
            <option value="2" {{#if (eq system.akcja 2)}}selected{{/if}}> PCHNIĘCIE</option>
            <option value="3"{{#if (eq system.akcja 3)}}selected{{/if}} > UDERZENIE</option>
            <option value="4"{{#if (eq system.akcja 4)}}selected{{/if}} > STRZAŁ</option>
        </select>
        <input data-name="zasieg"  data-element = "zasieg" type="text"  value="{{system.zasieg}}" placeholder="Pozostaw puste jak nie ma zasięgu">
    </div>
    <div class="efekty">
        <div class="tagi-top">
            <h3 class="item-tagi">EFEKTY</h3>
            <i class="fa fa-plus" data-action="dodajefekt" data-tooltip="Kliknij aby dodać efekt"></i>
        </div>
        <div class="wszystkie-efekty">
            {{#each system.efekt as |efekt index|}}
                <div class="efekt">
                    <div class="nazwa">
                        <div class="nazwa-szczegoly">
                            <label class="akcje-label" data-element = "efekt" data-action="ukryj" data-index="{{index}}" {{#if efekt.collapse}}data-tooltip="Kliknij aby schować szczegóły"{{else}} data-tooltip="Kliknij aby zobaczyć szczegóły"{{/if}}>NAZWA</label>
                            <i class="fa-regular fa-trash-can" data-action="usunefekt" data-index="{{index}}"></i>
                        </div>                     
                        <input type="text" data-element = "efekt" data-name="nazwa" data-index="{{index}}" value="{{efekt.nazwa}}">
                </div>
                {{#if efekt.collapse}}                    
                <div class="koszt">
                    <label class="akcje-label">TYP KOSZTU</label>
                    <select class="typ-kosztu" data-index = "{{index}}" data-name="typkosztu" data-element = "efekt">
                         <option value="-" {{#if (eq efekt.typkosztu "-")}}selected{{/if}}>-</option>
                        <option value="S" {{#if (eq efekt.typkosztu "S")}}selected{{/if}}>S</option>
                        <option value="S+P" {{#if (eq efekt.typkosztu "S+P")}}selected{{/if}}>S oraz P</option>
                        <option value="M" {{#if (eq efekt.typkosztu "M")}}selected{{/if}}>M</option>
                    </select>
                    {{#if (eq efekt.typkosztu "S+P")}}
                        <div class="koszt S-P">
                            <label class="akcje-label">KOSZT SUKCESÓW</label>
                            <input type="text" data-name="koszt" data-type="S" data-index="{{index}}" data-element = "efekt" value="{{efekt.koszt.S}}" placeholder="np. 1, 2 lub 1/2">
                            <label class="akcje-label">KOSZT PRZEWAG</label>
                            <input type="text" data-name="koszt" data-type="P" data-index="{{index}}" data-element = "efekt" value="{{efekt.koszt.P}}" placeholder="np. 1, 2 lub  1/2">
                        </div>
                    {{/if}}
                    {{#if (eq efekt.typkosztu "S")}}
                        <div class="koszt S">
                            <label class="akcje-label">KOSZT SUKCESÓW</label>
                            <input type="text" data-name="koszt" data-type="S" data-index="{{index}}" data-element = "efekt"  value="{{efekt.koszt.S}}" placeholder="np. 1/2">
                        </div>
                    {{/if}}
                    {{#if (eq efekt.typkosztu "M")}}
                        <div class="koszt M">
                            <label class="akcje-label">KOSZT MOCY</label>
                            <input type="text" data-name="koszt" data-type="M" data-index="{{index}}" data-element = "efekt" value="{{efekt.koszt.M}}" placeholder="np. 1/2">
                        </div>
                    {{/if}}
                </div>
                <div class="opis">
                    <label class="akcje-label">OPIS</label>
                    <textarea data-name="opis" data-index="{{index}}" data-element = "efekt">{{efekt.opis}}</textarea>
                </div>
               
                {{/if}}
                 </div>
            {{/each}}
        </div>
    </div>

</section>