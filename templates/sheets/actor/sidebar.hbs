<section class="sidebar">
  <div class="actor-info">
    <img src="{{actor.img}}" alt="{{actor.name}}" class="actor-image" />
    <h2 class="actor-name"><input type="text"  value="{{actor.name}}" name="name"></h2>
  </div>

  <div class="cechy">
{{#each actor.system.cechy}}
  <div class="cecha">
     <div class="cecha-top">
    <label class="cecha-name">{{capital @key}}</label>
    <select class="selector-cech" name="system.cechy.{{@key}}.value">
      {{#each (array 0 1 2 3)}}
        <option value="{{this}}" {{#ifEquals this ../value}}selected{{/ifEquals}}>{{this}}</option>
      {{/each}}
    </select>
  </div>
    <div class="umiejetnosci">
    <label class="umiejetnosci-label">Umiejętności</label>
    <div class="lista-umiejetnosci">
        <div class="glowna" data-key="{{@key}}">
{{log (lookup (lookup (lookup ../system.cechy @key) "glowna") "label")}} 
<input type="text" data-action="skillRoll" name="system.cechy.{{@key}}.glowna.label" value="{{lookup (lookup (lookup ../system.cechy @key) "glowna") "label"}}"  />

            <div class="checkbox-group">
                {{#each (range 1 3) as |val|}}
                    <input type="checkbox"  class="glowna-checkbox" data-key="{{@key}}" data-val="{{val}}">
                {{/each}}
            </div>
        </div>
        <div class="specjalna" data-key="{{@key}}">
            <input type="text" data-action="skillRoll"  name="system.cechy.{{@key}}.specjana1.label" value="{{system.cechy.[@key].specjana1.label}}" />
            <div class="checkbox-group">
                {{#each (range 1 4) as |val|}}
                    <input type="checkbox" class="glowna-checkbox" data-key="{{@key}}" data-val="{{val}}" name="system.cechy.{{@key}}.specjana1.value" >
                {{/each}}
            </div>
        </div>
           <div class="specjalna" data-key="{{@key}}">
            <input type="text" 
                data-action="skillRoll" 
                name="system.cechy.{{@key}}.specjana2.label" 
                value="{{lookup (lookup (lookup ../system.cechy @key) "specjana2") "label"}}"/>

            <div class="checkbox-group">
                {{#each (range 1 4) as |val|}}
                    <input type="checkbox" 
                        class="glowna-checkbox" 
                        data-key="{{@key}}" 
                        data-val="{{val}}"
                        name="system.cechy.{{@key}}.specjana2.value" >

                {{/each}}
            </div>
        </div>
           <div class="specjalna" data-key="{{@key}}">
            <input type="text" 
                data-action="skillRoll" 
                name="system.cechy.{{@key}}.specjana3.label" 
                value="{{lookup (lookup (lookup ../system.cechy @key) "specjana3") "label"}}"/>

            <div class="checkbox-group">
                {{#each (range 1 4) as |val|}}
                    <input type="checkbox" 
                        class="glowna-checkbox" 
                        data-key="{{@key}}" 
                        data-val="{{val}}"
                        name="system.cechy.{{@key}}.specjana3.value" >

                {{/each}}
            </div>
        </div>
    </div>
    </div>
  </div>
{{/each}}

  </div>
</section>
